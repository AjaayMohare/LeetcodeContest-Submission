class Solution {
public:
    string mapWordWeights(vector<string>& words, vector<int>& weights) {
        string ans = "";
        for(int i=0;i<words.size();i++){
            string w = words[i];
            int sc = 0;
            for(int j=0;j<w.size();j++){
                sc+=weights[w[j]-'a'];
            }
            sc=sc%26;
            ans.push_back('z'-sc);
        }
        return ans;
    }
};
